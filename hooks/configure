# See https://www.freedesktop.org/wiki/Software/systemd/dbus/ for
# details about the systemd dbus calls.

enable_and_start_service() {
	dbus-send --system --print-reply --dest=org.freedesktop.systemd1 \
		/org/freedesktop/systemd1 \
		org.freedesktop.systemd1.Manager.EnableUnitFiles \
			array:string:"$1.service" b:false b:false

	dbus-send --system --print-reply --dest=org.freedesktop.systemd1 \
		/org/freedesktop/systemd1 \
		org.freedesktop.systemd1.Manager.StartUnit \
		string:"$1.service" string:"replace"
}

stop_and_disable_service() {
	dbus-send --system --print-reply --dest=org.freedesktop.systemd1 \
		/org/freedesktop/systemd1 \
		org.freedesktop.systemd1.Manager.StopUnit \
		string:"$1.service" string:"replace"

	dbus-send --system --print-reply --dest=org.freedesktop.systemd1 \
		/org/freedesktop/systemd1 \
		org.freedesktop.systemd1.Manager.DisableUnitFiles \
			array:string:"$1.service" b:false

}

switch_service_sshd() {
	# The marker is not absolutely necessary but is the old way of
	# disabling the sshd service. We will use both here, the systemd
	# way and creating the marker which is checked by a ConditionPathExists
	# in the ssh.service unit file.
	marker_path=/etc/ssh/sshd_not_to_be_run
	case "$1" in
		false)
			if [ -e $marker_path ]; then
				rm -f $marker_path
				enable_and_start_service sshd
			fi
			;;
		true)
			if [ ! -e $marker_path ]; then
				touch $marker_path
				stop_and_disable_service sshd
			fi
			;;
		*)
			echo "ERROR: Invalid value '$1' provided for option service.sshd.disabled"
			exit 1
	esac
}

value=`snapctl get service.sshd.disabled`
if [ -n "$value" ]; then
	switch_service_sshd $value
else
	snapctl set service.sshd.disabled=false
	switch_service_sshd false
fi
