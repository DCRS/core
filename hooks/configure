switch_service_sshd() {
	marker_path=/etc/ssh/sshd_not_to_be_run
	case "$1" in
		enabled)
			if [ -e $marker_path ]; then
				rm -f $marker_path
				systemctl start sshd
			fi
			;;
		disabled)
			if [ ! -e $marker_path ]; then
				touch $marker_path
				systemctl stop sshd
			fi
			;;
		*)
			echo "ERROR: Invalid value '$1' provided for option service.sshd"
			exit 1
	esac
}

value=`snapctl get service.sshd`
if [ -n "$value" ]; then
	switch_service_sshd $value
else
	snapctl set service.sshd=enabled
	switch_service_sshd enabled
fi
