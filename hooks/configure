switch_service_ssh() {
	case "$1" in
		false)
			systemctl enable --now ssh.service
			;;
		true)
			systemctl disable --now ssh.service
			;;
		*)
			echo "ERROR: Invalid value '$1' provided for option service.ssh.disable"
			exit 1
	esac
}

value=`snapctl get service.ssh.disable`
if [ -n "$value" ]; then
	switch_service_ssh $value
else
	# Check what the current state of the service is
	value=false
	if [ `systemctl is-enabled ssh.service` = enabled ]; then
		value=true
	fi
	snapctl set service.ssh.disable=$value
	switch_service_ssh $value
fi
